{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": true,
        "printWidth": 80
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.js"],
      "extends": ["standard", "prettier"],
      "parserOptions": {
        "project": null
      }
    }
  ]
}
