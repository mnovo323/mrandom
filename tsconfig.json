{
  "compilerOptions": {
    "outDir": "./dist/types",
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
